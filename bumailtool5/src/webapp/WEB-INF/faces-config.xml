<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<!-- =========== FACES CONFIGURATION FILE ================================== -->

<faces-config>

 <application>
    <message-bundle>org.sakaiproject.tool.mailtool.Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <!-- 
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
      -->
    </locale-config>
  </application>

	<managed-bean>
		<description>Mailtool</description>
		<managed-bean-name>Mailtool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.mailtool.Mailtool</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

    <managed-bean>
        <managed-bean-name>uploadBean</managed-bean-name>
        <managed-bean-class>org.sakaiproject.tool.mailtool.UploadBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    
	<navigation-rule>
		<from-view-id>/mailtool/main.jsp</from-view-id>
		<navigation-case>
			<from-outcome>results</from-outcome>
			<to-view-id>/mailtool/results.jsp</to-view-id>
      	<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>Upload</from-outcome>
			<to-view-id>/mailtool/upload4.jsp</to-view-id>
      	<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>main_onepage</from-outcome>
			<to-view-id>/mailtool/main_onepage.jsp</to-view-id>
      	<redirect/>
		</navigation-case>		
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/mailtool/main_onepage.jsp</from-view-id>
		<navigation-case>
			<from-outcome>results</from-outcome>
			<to-view-id>/mailtool/results.jsp</to-view-id>
      	<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>main_twopage</from-outcome>
			<to-view-id>/mailtool/main.jsp</to-view-id>
      	<redirect/>
		</navigation-case>
	</navigation-rule>
	
    <navigation-rule>
        <from-view-id>/mailtool/upload_multifile.jsp</from-view-id>
        <navigation-case>
            <from-outcome>Upload Files</from-outcome>
            <to-view-id>/mailtool/ProcessFileUpload.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Upload_Failed</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Cancel</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>        
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/mailtool/upload3.jsp</from-view-id>
        <navigation-case>
            <from-outcome>Upload Files</from-outcome>
            <to-view-id>/mailtool/ProcessFileUpload.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Upload_Failed</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Cancel</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>        
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/mailtool/upload4.jsp</from-view-id>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>        
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/mailtool/ProcessFileUpload.jsp</from-view-id>
        <navigation-case>
            <from-outcome>Send Email</from-outcome>
            <to-view-id>/mailtool/multisendmail.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Upload_Failed</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>OK</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>        
    </navigation-rule>


    <navigation-rule>
        <from-view-id>/mailtool/upload.jsp</from-view-id>
        <navigation-case>
            <from-outcome>Upload_OK</from-outcome>
            <to-view-id>/mailtool/MyResult.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Upload_Failed</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Cancel</from-outcome>
            <to-view-id>/mailtool/main.jsp</to-view-id>
        </navigation-case>        
    </navigation-rule>

	<navigation-rule>
		<from-view-id>/mailtool/MyResult.jsp</from-view-id>
		<navigation-case>
			<from-outcome>OK</from-outcome>
			<to-view-id>/mailtool/main.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
		
	<navigation-rule>
		<from-view-id>/mailtool/results.jsp</from-view-id>
		<navigation-case>
			<from-outcome>main_onepage</from-outcome>
			<to-view-id>/mailtool/main_onepage.jsp</to-view-id>
			<redirect/>
		</navigation-case>
		<navigation-case>
			<from-outcome>main_twopage</from-outcome>
			<to-view-id>/mailtool/main.jsp</to-view-id>
			<redirect/>
		</navigation-case>		
	</navigation-rule>
	
	<component>
		<component-type>MailtoolSelector</component-type>
		<component-class>org.sakaiproject.tool.mailtool.SelectorComponent</component-class>
	</component>

</faces-config>
