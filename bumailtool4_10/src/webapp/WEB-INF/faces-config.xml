<?xml version="1.0"?>

<!DOCTYPE faces-config PUBLIC
  "-//Sun Microsystems, Inc.//DTD JavaServer Faces Config 1.1//EN"
  "http://java.sun.com/dtd/web-facesconfig_1_1.dtd">

<!-- =========== FACES CONFIGURATION FILE ================================== -->

<faces-config>

 <application>
    <message-bundle>org.sakaiproject.tool.mailtool.Messages</message-bundle>
    <locale-config>
      <default-locale>en</default-locale>
      <!-- 
      <supported-locale>de</supported-locale>
      <supported-locale>fr</supported-locale>
      <supported-locale>es</supported-locale>
      -->
    </locale-config>
  </application>

	<managed-bean>
		<description>Mailtool</description>
		<managed-bean-name>Mailtool</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.mailtool.Mailtool</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
		
		<managed-property>
			<description>Service Dependency: UserDirectoryService</description>
			<property-name>userDirectoryService</property-name>
			<value>#{Components["org.sakaiproject.user.cover.UserDirectoryService"]}</value>
		</managed-property>
		
		<managed-property>
			<description>Service Dependency: Email Service</description>
			<property-name>emailService</property-name>
			<value>#{Components["org.sakaiproject.email.cover.EmailService"]}</value>
		</managed-property>	
		
		<managed-property>
			<description>Sakai AuthzGroupService</description>
			<property-name>authzGroupService</property-name>
			<value>#{Components["org.sakaiproject.authz.cover.AuthzGroupService"]}</value>
		</managed-property>
	</managed-bean>

	<managed-bean>
		<description>Upload</description>
		<managed-bean-name>Upload</managed-bean-name>
		<managed-bean-class>org.sakaiproject.tool.mailtool.Upload</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<navigation-rule>
		<from-view-id>/mailtool/main.jsp</from-view-id>
		<navigation-case>
			<from-outcome>results</from-outcome>
			<to-view-id>/mailtool/results.jsp</to-view-id>
      	<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/mailtool/results.jsp</from-view-id>
		<navigation-case>
			<from-outcome>main</from-outcome>
			<to-view-id>/mailtool/main.jsp</to-view-id>
			<redirect/>
		</navigation-case>
	</navigation-rule>
	
	<component>
		<component-type>MailtoolSelector</component-type>
		<component-class>org.sakaiproject.tool.mailtool.SelectorComponent</component-class>
	</component>

</faces-config>
